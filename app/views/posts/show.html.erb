<div class="container-fluid">

<h2 class = "text-center"><%= @post.title%></h2>

<!-- <table style = "border: 1px solid black; border-collapse: collapse"> -->
<div class="row">
<div class ="col-md-10 col-md-offset-1">
<table class ="table table-striped">
<tr>
<th>Title</th>
<th>Category</th>
<th>Edit</th>
<th>Delete</th>
</tr>
  <tr >
    <td ><%=@post.title %></td>
    <td><%= @post.category %></td>
    <td><%= link_to('Edit', edit_post_path(@post), {class: "btn-xs btn-info"})%></td>
    <td><%= link_to('Delete',post_path(@post), method: :delete, data: { confirm: "Are you sure?" },class: "btn-xs btn-danger")%></td>
  </tr>
</table>
</div>
</div>
<div class="row">
<div class ="col-md-10 col-md-offset-1">
<p class = "text-center"><%=@post.body%></p>
<br>
<%=  link_to('Back to Author', author_posts_path(@author), {class: "btn btn-success"}) %>
</div>
</div>
</div>