<div class="container-fluid">

<h2 class = "text-center">Authors:</h2>

<!-- <table style = "border: 1px solid black; border-collapse: collapse"> -->

<table class ="table table-striped">
<tr>
<th>First Name</th>
<th>Last Name</th>
<th>Age</th>
<th>Info</th>
<th>Edit</th>
<th>Delete<th>
</tr>
<% @authors.each do |author| %>
  <tr >
    <td ><%=author.first_name  %></td>
    <td ><%= author.last_name %></td>
    <td><%= author.age %></td>
    <td><%= link_to('Info', author_path(author), {class: "btn-xs btn-info"})%></td>
    <td><%= link_to('Edit', edit_author_path(author), {class: "btn-xs btn-info"})%></td>
    <td><%= link_to('Delete',author_path(author), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-xs btn-danger")%></td>
  </tr>
  <%end %>
</table>

<%=  link_to('Add new author', new_author_path, {class: "btn btn-success"}) %>

</div>
